@model Usuario
@{
    Layout = "_LayoutProfileUser";
}
@{
    int torneosGanados = (int)ViewData["TORNEOSGANADOS"];
}
@section scriptUpdate{
<script>
    function showLoading() {
        document.getElementById("loading").style.display = "block";
    }
</script>
}
<div class="menu">
    <div class="menu-logo">
        <h3 class="text-logo">
            <a asp-controller="Home" asp-action="Index">Atras</a>
        </h3>
    </div>
    <div class="button-container">
        <div class="a-borders">
        <a class="primary-button primary-background" asp-controller="Managed" asp-action="LogOut">
                Cerrar Sesion
            </a>
        </div>
    </div>
</div>


<div id="loading">
    <div id="loading-content">
        <img src="~/imgs/icons/loading.gif" alt="Cargando..." />
        <div class="text-loading">
            Actualizando Perfil
            <div class="spinner-grow text-light" role="status"></div>
            <div class="spinner-grow text-light" role="status"></div>
            <div class="spinner-grow text-light" role="status"></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="main-body">
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="@Context.User.FindFirst("IMAGESMALL").Value"
                                 class="rounded-circle"
                                 width="110" />
                            <div class="mt-3">
                                <h4 class="text-profile">
                                    @Context.User.Identity.Name
                                </h4>
                            </div>
                            <div class="mt-4">
                                <div class="button-container">
                                    <div class="a-borders">
                                        <a asp-controller="Users" asp-action="UpdateProfile" onclick="showLoading()"
                                           class="secondary-button secondary-background">
                                            Actualizar Perfil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4" />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h4 class="title-profile">Nombre</h4>
                            <h3 class="text-profile">
                                @Context.User.Identity.Name#@Context.User.FindFirst("TAG").Value
                            </h3>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h4 class="title-profile">Email</h4>
                            <h3 class="text-profile">@Context.User.FindFirst("EMAIL").Value</h3>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h4 class="title-profile">Rango</h4>
                            <h3 class="text-profile">@Context.User.FindFirst("RANGO").Value</h3>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h4 class="title-profile">
                                Torneos ganados
                            </h4>
                            <h3 class="text-profile">
                                @torneosGanados
                            </h3>
                        </li>

                        <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                            <h3 class="text-profile">
                                <a class="button-password">
                                    Cambiar contrasena
                                </a>
                            </h3>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
